{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*":[
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*", "src/app.ts",
    "./",
    "src/routes"
  ]
}
